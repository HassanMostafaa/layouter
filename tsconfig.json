{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES6",
    "module": "CommonJS",  // Set to CommonJS for default build
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}